.col-md-12
  %h1.text-center= @category.name

  .list-group.text-center
    = link_to("Back", root_path)
    = link_to("New Article", new_category_article_path(@category))
    - if @category.editable_by?(current_user)
      = link_to("Edit", edit_category_path(@category))
      = link_to("Delete", category_path(@category), method: :delete, data: {confirm: "Are You Sure?"})

  %hr
  - @articles.each do |a|
    .text-center= link_to(a.title, category_article_path(@category, a), class: "btn btn-lg")
    %hr
